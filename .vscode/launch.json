  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Debug",
      "program": "${workspaceFolder}/build/index.js",
      "sourceMaps": true,
      "preLaunchTask": "build:watch",
      "console": "integratedTerminal",
      "outFiles": [
        "${workspaceFolder}/build/**/*.js"
      ],
      "restart": true,
      "runtimeExecutable": "${workspaceFolder}/node_modules/nodemon/bin",
      "runtimeArgs": ["--ignore", "./build/puzzles", "--ignore", "./src"]
    }
  ]
}